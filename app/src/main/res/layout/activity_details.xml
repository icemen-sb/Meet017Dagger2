                    android:layout_marginLeft="16dp"
                    android:text="TextView" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@android:dimen/app_icon_size"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="match_parent"
